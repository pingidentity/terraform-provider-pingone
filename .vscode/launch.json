    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Provider (Attach to Terraform)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "env": {
                "TF_LOG": "DEBUG",
                "TF_LOG_PROVIDER": "DEBUG"
            },
            "args": [
                "-debug"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Acceptance Tests - Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {
                "TF_ACC": "1",
                "TF_LOG": "DEBUG",
                "TF_LOG_PATH": "${workspaceFolder}/debug.log"
            },
            "args": [
                "-test.v",
                "-test.timeout=120m"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Acceptance Tests - Specific Test",
